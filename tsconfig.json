{
  "compilerOptions": {
    "lib": [ "es2015", "dom" ],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "declarationDir": "dist/typings",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ]
}